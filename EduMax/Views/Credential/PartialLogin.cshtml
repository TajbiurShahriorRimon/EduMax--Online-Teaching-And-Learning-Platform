<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content rounded-0 border-0 p-4">
        <div class="modal-header border-0">
            <h3>Register</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="login">
                <form action="/Credential/Index" method="post" class="row">
                    @Html.AntiForgeryToken()
                    <div class="col-12">
                        <input type="text" class="form-control mb-3" name="User.Name" placeholder="User Name" value="@ViewBag.UserName">
                        @Html.ValidationMessageFor(model => model.User.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12">
                        <input type="email" class="form-control mb-3" name="Email" placeholder="Email" value="@ViewBag.UserEmail">
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12">
                        <input type="password" class="form-control mb-3" name="Password" placeholder="Password" value="@ViewBag.UserPassword">
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12">
                        <input type="password" class="form-control mb-3" name="User.Institution" placeholder="Institution" value="@ViewBag.UserInstitution">
                        @Html.ValidationMessageFor(model => model.User.Institution, "", new { @class = "text-danger" })
                    </div>

                    <input hidden="hidden" name="User.Status" value="1" />

                    <div class="col-12">
                        <button type="submit" class="btn btn-danger rounded">SIGN UP</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
