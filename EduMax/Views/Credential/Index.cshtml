@model EduMax.Models.Credential

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @*Html.EnableClientValidation(true);*@
}

<h2>View</h2>

<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body class="w3-container">

    <form class="w3-panel w3-card-4" action="/Credential/Index" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h2>Sign Up!</h2>

        <p><input name="User.Name" class="w3-input" type="text" placeholder="Name" width="100" value="@ViewBag.UserName"></p>
        @Html.ValidationMessageFor(model => model.User.Name, "", new { @class = "text-danger" })

        <p><input name="Email" class="w3-input" type="text" placeholder="Email" value="@ViewBag.UserEmail"></p>
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

        <p><input name="password" class="w3-input" type="password" placeholder="Password" value="@ViewBag.UserPassword"></p>
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        <p><textarea name="User.Institution" class="w3-input"
          placeholder="Institution">@ViewBag.UserInstitution</textarea></p>
        @Html.ValidationMessageFor(model => model.User.Institution, "", new { @class = "text-danger" })

        <input hidden="hidden" name="User.Status" value="1"/>

        <p>
            @*<button name="action:Student" class="w3-btn w3-black">Register as Student</button>*@
            @*<input type="submit" name="student" value="Register as Student" class="w3-btn w3-black" />*@
            <input type="submit" name="teacher" value="Register" class="w3-btn w3-black" />
            @*<button name="action:Teacher" class="w3-btn w3-green">Register as Teacher</button>*@
        </p>
    </form>

</body>
</html>

