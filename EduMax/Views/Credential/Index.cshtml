@model EduMax.Models.Credential

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.EnableClientValidation(true);
}

<h2>View</h2>

<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<body class="w3-container">

    <form class="w3-panel w3-card-4 w3-animate-top" action="/Credential/Index" method="post">
        <h2>Sign Up!</h2>
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        <p><input name="Name" class="w3-input" type="text" placeholder="Name" value="@ViewData["NameValue"]" width="100"></p>
        <strong class="alert-danger">@ViewData["ErrNameMsg"]</strong>
        @*@Html.ValidationMessageFor(model => model.Teacher.Name, "", new { @class = "text-danger" })*@
        <p><input name="Email" class="w3-input" type="text" placeholder="Email" value="@ViewData["EmailValue"]"></p>
        <strong class="alert-danger">@ViewData["ErrEmailMsg"]</strong>

        <p><input name="password" class="w3-input" type="password" placeholder="Password" value="@ViewData["PasswordValue"]"></p>
        <strong class="alert-danger">@ViewData["ErrPasswordMsg"]</strong>

        <p><textarea name="Institution" class="w3-input" placeholder="Institution"></textarea></p>
        <p>
            @*<button name="action:Student" class="w3-btn w3-black">Register as Student</button>*@
            <input type="submit" name="student" value="Register as Student" class="w3-btn w3-black" />
            <input type="submit" name="teacher" value="Register as Teacher" class="w3-btn w3-green" />
            @*<button name="action:Teacher" class="w3-btn w3-green">Register as Teacher</button>*@
        </p>
    </form>

</body>
</html>

