@model IEnumerable<EduMax.Models.Category>

@{
    ViewBag.Title = "Category List";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

    <div class="container">
        <a href="/Category/CategoryByCourse" class="btn btn-outline-dark"><strong>Category VS Product</strong></a>


        <h2><u>Category List</u></h2>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
                        @Html.ActionLink("Change Status", "CategoryStatus", new { id = item.CategoryId })
                    </td>
                </tr>
            }

        </table>
    </div>

