@model IEnumerable<EduMax.Models.Course>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
    <div class="container">
        <h2>Cart</h2> <hr />
        @*if no course is selected for adding in the cart, then this Session is null and therefore this line will be executed*@
        @if (Session["shoppingCart"] == null)
        {
            <h2>Nothing Added in the Cart</h2>
            <h3>
                @Html.ActionLink("Start Shopping", "List", "Course")
            </h3>
        }
        @*if any course is added in the shopping cart then this line executes*@
        else if (Model.Count() > 0)
        {
            <p>
                @Html.ActionLink("Continue Shopping", "List", "Course")
            </p>
            <table class="table">
                <tr>
                    @*<th>
                        Category
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.User.Name)
                    </th>
                    <th>
                        Course
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursePhoto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseName)
                        </td>
                        <td>
                            @if (item.CoursePhoto != null)
                            {
                                <img class="img-thumbnail" src="@Url.Content(item.CoursePhoto)" alt="" height="150" width="200" />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.CourseId })
                            <a href="/ShoppingCart/RemoveFromShoppingCart/@item.CourseId" class="btn-danger btn-xs">X</a>
                        </td>
                    </tr>
                }

            </table>
            <hr />
            <p><strong style="color: darkmagenta">Total Price: @ViewBag.TotalPrice</strong></p>

            <a href="/ShoppingCart/Checkout" class="btn btn-info btn-group-justified">Checkout</a>
        }
        @*After removing courses from the shopping cart, if the shopping cart becomes empty by then, then still the 
        Session["shopping cart"] is not null and the count will be zero, so the following line will be executed*@
        else
        {
            <h2>Nothing Added in the Cart</h2>
            <h3>
                @Html.ActionLink("Start Shopping", "List", "Course")
            </h3>
        }
    </div>